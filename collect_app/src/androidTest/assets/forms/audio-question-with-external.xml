<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <h:head>
        <h:title>Audio Question with External</h:title>
        <model>
            <instance>
                <data id="audio_question_with_external" orx:version="1">
                    <sound/>
                    <external_string/>
                </data>
            </instance>
            <bind nodeset="sound" type="binary"/>
            <bind nodeset="external_string" type="string"/>
        </model>
    </h:head>
    <h:body>
        <group appearance="field-list">
            <upload mediatype="audio/*" ref="/data/sound">
                <label>What does it sound like?</label>
            </upload>
            <input appearance="ex:com.example.EXTERNAL" ref="/data/external_string">
                <label>Get string from other app</label>
            </input>
        </group>
    </h:body>
</h:html>
